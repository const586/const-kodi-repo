<window>
  <defaultcontrol>50</defaultcontrol>
  <allowoverlay>no</allowoverlay>
  <coordinates>
    <system>1</system>
    <posx>0</posx>
    <posy>0</posy>
  </coordinates>
  <animation effect="fade" time="300">WindowOpen</animation>
  <animation effect="fade" time="300">WindowClose</animation>
  <controls>
    <control type="group">
      <destiption>Wallpaper</destiption>
      <control type="image">
        <description>Normal Default Background Image</description>
        <posx>0</posx>
        <posy>0</posy>
        <width>1280</width>
        <height>720</height>
        <aspectratio>scale</aspectratio>
        <texture>$INFO[Skin.CurrentTheme,special://skin/backgrounds/,.jpg]</texture>
        <visible>!Player.HasVideo</visible>
      </control>
      <control type="label">
        <description>Title</description>
        <posx>10</posx>
        <posy>10</posy>
        <width>900</width>
        <visible>true</visible>
        <label>Game Center</label>
        <font>font16</font>
      </control>
      <control type="label" id="12">
        <description>Current path</description>
        <posx>1260</posx>
        <posy>10</posy>
        <width>700</width>
        <heigth>25</heigth>
        <visible>true</visible>
        <align>right</align>
        <font>font12</font>
        <label></label>
      </control>
      <control type="label" id="11">
        <description>My First label</description>
        <posx>1260</posx>
        <posy>695</posy>
        <width>600</width>
        <height>25</height>
        <visible>true</visible>
        <align>right</align>
        <label>Hello World</label>
        <font>font12</font>
      </control>
      <control type="panel" id="10">
        <description>Game List</description>
        <posx>16</posx>
        <posy>45</posy>
        <width>1248</width>
        <heigth>700</heigth>
        <visible>true</visible>
        <orientation>horizontal</orientation>
        <pagecontrol>11</pagecontrol>
        <viewtype>list</viewtype>
        <scrolltime tween="sine" easing="out">200</scrolltime>
        <itemlayout width="415" height="36">
          <control type="image">
            <posx>0</posx>
            <posy>0</posy>
            <width>32</width>
            <heigth>32</heigth>
            <aspectratio>scale</aspectratio>
            <texture>DefaultAddon.png</texture>
            <visible>True</visible>
          </control>
          <control type="label">
            <posx>36</posx>
            <posy>5</posy>
            <width>375</width>
            <heigth>24</heigth>
            <font>font14</font>
            <aligny>center</aligny>
            <selectedcolor>green</selectedcolor>
            <algin>left</algin>
            <info>ListItem.Label</info>
          </control>
        </itemlayout>
        <focusedlayout width="350" height="36">
          <!--<control type="image">
            <width>243</width>
            <height>33</height>
            <posx>0</posx>
            <posy>0</posy>
            <visible>true</visible>
            <texture>OverlayDialogBackground.png</texture>
          </control>-->
          <control type="image">
            <posx>0</posx>
            <posy>0</posy>
            <width>32</width>
            <heigth>32</heigth>
            <aspectratio>scale</aspectratio>
            <texture>DefaultAddon.png</texture>
            <visible>True</visible>
          </control>
          <control type="label">
            <posx>36</posx>
            <posy>5</posy>
            <width>375</width>
            <heigth>24</heigth>
            <font>font14</font>
            <aligny>center</aligny>
            <textcolor>FF00D4FF</textcolor>
            <shadowcolor>ff000000</shadowcolor>
            <algin>left</algin>
            <info>ListItem.Label</info>
            <!--<scroll>true</scroll>-->
          </control>
        </focusedlayout>
        
      </control>
      
    </control>
  </controls>
</window>
